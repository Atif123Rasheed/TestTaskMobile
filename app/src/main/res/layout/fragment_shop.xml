<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cpuImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:src="@drawable/cpu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cameraImage"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cameraImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camera"
        app:layout_constraintStart_toEndOf="@id/cpuImage"
        app:layout_constraintEnd_toStartOf="@id/ssdImage"
        app:layout_constraintTop_toTopOf="@id/cpuImage"
        app:layout_constraintBottom_toBottomOf="@id/cpuImage"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ssdImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ssd"
        app:layout_constraintStart_toEndOf="@id/cameraImage"
        app:layout_constraintEnd_toStartOf="@id/sdImage"
        app:layout_constraintTop_toTopOf="@id/cpuImage"
        app:layout_constraintBottom_toBottomOf="@id/cpuImage"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sdImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sd"
        app:layout_constraintStart_toEndOf="@id/ssdImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cpuImage"
        app:layout_constraintBottom_toBottomOf="@id/cpuImage"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cpuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="Exynos 990"
        android:fontFamily="@font/mark_pro_regular"
        android:textColor="@color/gray_harbor"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/cpuImage"
        app:layout_constraintEnd_toEndOf="@id/cpuImage"
        app:layout_constraintTop_toBottomOf="@id/cpuImage"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cameraTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="108 + 12 mp"
        android:fontFamily="@font/mark_pro_regular"
        android:textColor="@color/gray_harbor"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/cameraImage"
        app:layout_constraintEnd_toEndOf="@id/cameraImage"
        app:layout_constraintBottom_toBottomOf="@id/cpuTextView"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ssdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="8 GB"
        android:fontFamily="@font/mark_pro_regular"
        android:textColor="@color/gray_harbor"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/ssdImage"
        app:layout_constraintEnd_toEndOf="@id/ssdImage"
        app:layout_constraintBottom_toBottomOf="@id/cpuTextView"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/sdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="256 GB"
        android:fontFamily="@font/mark_pro_regular"
        android:textColor="@color/gray_harbor"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/sdImage"
        app:layout_constraintEnd_toEndOf="@id/sdImage"
        app:layout_constraintBottom_toBottomOf="@id/cpuTextView"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/colorAndCapability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_color_and_capability"
        android:textSize="16sp"
        android:textColor="@color/dark_blue"
        android:fontFamily="@font/mark_pro_medium"
        android:layout_marginStart="30dp"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cpuTextView"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/firstColor"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="50dp"
        tools:cardBackgroundColor="@color/brown"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/colorAndCapability">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:src="@drawable/check"/>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/secondColor"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="50dp"
        tools:cardBackgroundColor="@color/dark_blue"
        android:layout_marginStart="19dp"
        app:layout_constraintStart_toEndOf="@id/firstColor"
        app:layout_constraintBottom_toBottomOf="@id/firstColor"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/capacityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="128 GB"
        android:textSize="13sp"
        android:fontFamily="@font/mark_pro_bold"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/orange"
        android:layout_marginStart="58dp"
        app:layout_constraintStart_toEndOf="@id/secondColor"
        app:layout_constraintTop_toTopOf="@+id/secondColor"
        app:layout_constraintBottom_toBottomOf="@id/secondColor"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/capacityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="256 gb"
        android:textColor="@color/telegrey"
        android:layout_marginStart="21dp"
        app:layout_constraintStart_toEndOf="@id/capacityButton"
        app:layout_constraintTop_toTopOf="@id/capacityButton"
        app:layout_constraintBottom_toBottomOf="@id/capacityButton"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Add to Cart        $1,500.00"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/mark_pro_bold"
        android:textAllCaps="false"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/orange"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstColor"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>